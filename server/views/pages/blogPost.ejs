<% include ../partials/head %>
<% include ../partials/header %>
<div class="row">
	<div class="col-xs-12">
<h1 class="text-center"><%= blog.title %> - Written By <%= blog.author.name %></h1>

<p><%= blog.content %></p>
<div class="row">
	<div class="col-xs-1">
		<a href="/blogPost/<%= blog._id %>" id="likes" data-value="/likepost/<%= blog._id %>"><button class="btn btn-info"><i class="fa fa-thumbs-up" aria-hidden="true"></i> Like</button></a>
	</div>
	<div class="col-xs-1">
		<a href="/blogPost/<%= blog._id %>" id="dislikes" data-value="/dislike/<%= blog._id %>"><button class="btn btn-info"><i class="fa fa-thumbs-down" aria-hidden="true"></i> Dislike</button></a>
	</div>
	<div class="col-xs-4"><br> <p> - <%= blog.likes%> like(s) this post</p></div>
</div>


<br>
<hr>
<br>

<form method="post" action="/comment/<%= blog._id %>">
	<div class="row">
		<div class="col-xs-8">
			<div class="form-group">
         		<textarea name="content" class="form-control" placeholder="Write Comment ..."></textarea>
         		
    		</div>
		</div>
		<div class="col-xs-4">
			<button type="submit" class="btn btn-default" value="submit">Submit</button>
		</div>
	</div>
</form>
<br>
<h3>Comment:</h3>
<%for(let i=0;i<comment.length;i++){%>
	<div class="row jumbotron">
		<div class="col-xs-8">
			<p><%= comment[i].content %></p>
			<br>
			<p>Comment at : <%= comment[i].created %></p>
		</div>
		<div class="col-xs-4">
			<p><%= comment[i].user.name %></p>
		</div>

	</div>
<%}%>
</div>
</div>


<% include ../partials/footer %>