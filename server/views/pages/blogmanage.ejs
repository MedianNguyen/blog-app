<% include ../partials/head %>
    <% include ../partials/header %>
        <h1 class="text-center">Blog Management</h1>
        <%if(blog.length === 0){%>
            <p class="text-center">Dont have a blog ? Create Blog now ! </p>
            <form method="post" action="/createblog">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" placeholder="Title ..." name="title">
                </div>
                <div class="form-group">
          <label for="title">Describe</label>
          <input type="text" class="form-control" placeholder="Describe ..." name="describe">
        </div>
                <div class="form-group">
                    <label for="content">Content</label>
                    <textarea name="content" class="form-control" placeholder="Write blog content ..."></textarea>
                </div>
                <button type="submit" class="btn btn-default" value="submit">Submit</button>
            </form>
            <%}else{%>
                <h3 class="text-center">You have <%= blog.length%> blog(s)</h3>
                <br>
                <% for(let i = 0;i<blog.length;i++){%>
                    <div class="jumbotron">
                        <h4 class="text-center"><%= blog[i].title %></h4>
                        <hr>
                        <p>
                            <%= blog[i].content %>
                        </p>
                        <a href="/editBlog/<%= blog[i]._id %>">
                            <button class="btn btn-primary">Edit</button>
                        </a>
                        <a href="/blogmanagement" id="deleteBlogPost" data-value="/deleteBlog/<%= blog[i]._id %>">
                            <button class="btn btn-danger">Delete</button>
                        </a>
                    </div>
                    <%}%>
                    <%}%>
                        <% include ../partials/footer %>